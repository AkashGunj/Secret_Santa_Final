pipeline {
    agent any
    
    tools{
        maven 'maven3'
    }

    stages {        
        stage('compile') {
            steps {
                sh 'mvn compile'
            }
        }
        
        stage('Unit testing') {
            steps {
                sh 'mvn test'
            }
        }
        
        stage('package') {
            steps {
                sh 'mvn package'
            }
        }
        
    }
}
